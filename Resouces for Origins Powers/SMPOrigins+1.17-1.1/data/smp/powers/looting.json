{
    "type": "origins:multiple",
    "name": "Looting",
    "description": "You are quite the lucky fellow to be getting all those blaze rods, even maybe a bit too lucky...",
    "loading_priority": 1,
        "looting": {
            "type": "origins:action_over_time",
            "interval": 1,
            "rising_action": {
                "type": "origins:execute_command",
                "permission_level": 4,
                "command": "/tag @s add looting"
            },
            "hidden": true,
            "condition": {
                "type": "origins:command",
                "inverted": true,
                "comparison": "==",
                "compare_to": 3,
                "permission_level": 4,
                "command": "/execute if entity @s[tag=looting]"
            }
        },
        "looting_remove": {
            "type": "origins:action_on_callback",
            "hidden": true,
            "execute_chosen_when_orb": true,
            "entity_action_removed": {
                "type": "origins:execute_command",
                "permission_level": 4,
                "command": "/tag @s remove looting"
            },
            "loading_priority": 1
        }
}